<h1>New Project</h1>

<%= form_with model: @project, url: projects_path do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>
 

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', projects_path %>
