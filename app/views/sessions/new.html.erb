<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>

<%= form_with url: login_path do |f| %>

  <% if flash[:notice] %>
    <div class="alert alert-danger">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <div class="form-group">
    <%= f.submit "Login" %>
  </div>
<% end %>


<%= link_to "Not registered yet ? sign up here !", signup_path %>

<%= link_to "Forgot password", forgot_password_path %>
